<h1><%= params[:id] %></h1>
<a href="/">Home</a>
<% form_tag "/sections/#{params[:id]}/search", :method => 'get' do %>
  <p>
    <%= text_field_tag :q, params[:q] %>
    <%= text_field_tag :min_ask, params[:min_ask] %>
    <%= text_field_tag :max_ask, params[:max_ask] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<div id="loading" style="position: absolute; z-index: 1000000; width: 100%; height: 100%; background: rgba(255,255,255,.5); text-align: center;"><div style="width: 300px; margin: 0 auto; font-size: 3em; margin-top: 5em;">Loading pics</div></div>
<div id="content">
</div>
<style>
.does_scale {
	-webkit-transition: all .2s linear;
}
.does_scale:hover {
	-webkit-transform: scale(2);
	z-index: 10000;
}
</style>
<script>
$(document).ready(function () {
	$('#loading').hide().ajaxStart(function() {
		$(this).show();
	}).ajaxStop(function() {
		$(this).hide();
	});
	$(<%= @items.to_json.html_safe %>).each(function(i,e){
		$.ajax({
		      url: '/items/'+e['id']+'.json?link='+e['link'],
		      type: "GET",
			  timeout: 5000,
		      async:true,
		      success: function(data){
				data.price == 0 ? price = "" : price = "$"+data.price;
				if(data.img) {
					$('#content').prepend('<div class="does_scale" style="margin: 3px; width: 100px; height: 100px; overflow: hidden; position: relative; float: left;"><a style="text-decoration: none; color: #FFF; text-shadow: 0px 0px 2px #000; font-weight: bold;" href="'+data.href+'"><img src='+data.img+' width="100" alt="'+data.title+'" ><div style="position: absolute; top: 0; left: 0;">'+price+'</div></a></div>');
				}
		      }
		});
	});
});
</script>